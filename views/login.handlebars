<section class="section">
  <div class="container">
    <h1 class="title">UAC Tracker</h1>
    <p class="subtitle is-centered"><strong>Login</strong></p>
  </div>
</section>
<div class="container field has-addons">
  <p class="control has-icons-left has-icons-right">
    <input
      class="input is-medium"
      id="user-email"
      type="email"
      placeholder="Email"
    />
    <span class="icon is-small is-left">
      <i class="fas fa-envelope"></i>
    </span>
    <span class="icon is-small is-right">
      <i class="fas fa-check"></i>
    </span>
  </p>
</div>
<div class="container field has-addons">
  <p class="control has-icons-left has-icons-right">
    <input
      class="input is-medium"
      id="user-password"
      type="password"
      placeholder="Password"
    />
    <span class="icon is-small is-left">
      <i class="fas fa-lock"></i>
    </span>
  </p>
</div>
<div class="container field is-grouped">

  <p class="control">
    <button class="button" id="login">Login</button>
  </p>
</div>
<div>
  <h4>New User</h4>
  <p class="control">
    <a href="/new-user"><button class="button is-link" id="new-user">New User</button></a>
  </p>
</div>
<script src="./js/login.js"></script>